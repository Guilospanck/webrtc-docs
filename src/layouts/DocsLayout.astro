---
import "../styles/global.css";

const { nav, title } = Astro.props;
const base = import.meta.env.BASE_URL;
const docUrl = (slug) => `${base}docs/${slug}/`;

const renderNav = (items) => (
  <ul>
    {items.map((item) => (
      <li>
        <a href={docUrl(item.slug)}>{item.title}</a>
        {item.children?.length ? renderNav(item.children) : null}
      </li>
    ))}
  </ul>
);
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <div class="layout">
      <aside class="sidebar">
        <div class="brand">WebRTC</div>
        <nav>{renderNav(nav)}</nav>
      </aside>
      <main class="content">
        <slot />
      </main>
    </div>
  </body>
</html>
