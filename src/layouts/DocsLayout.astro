---
import "../styles/global.css";
import NavList from "../components/NavList.astro";

const { nav, title } = Astro.props;
const base = import.meta.env.BASE_URL;
const docUrl = (slug) => `${base}docs/${slug}/`;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <div class="layout">
      <aside class="sidebar">
        <div class="brand">WebRTC</div>
        <nav>
          <NavList items={nav} docUrl={docUrl} />
        </nav>
      </aside>
      <main class="content">
        <slot />
      </main>
    </div>
  </body>
</html>
